{
  "type": "object",
  "properties": {
    "validators": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "options": {}
            },
            "required": ["name"]
          }
        ]
      },
      "default": []
    },
    "failOnError": {
      "type": "boolean",
      "default": true
    },
    "fix": {
      "type": "boolean",
      "default": false
    }
  }
}
