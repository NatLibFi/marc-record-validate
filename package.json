{
  "name": "@natlibfi/marc-record-validate",
  "description": "Validate and fix MARC records",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [
    "marc",
    "record",
    "validate",
    "validation",
    "library",
    "libraries",
    "bibliography",
    "bibliographic",
    "cataloguing"
  ],
  "homepage": "https://github.com/NatLibFi/marc-record-validate",
  "bugs": {
    "url": "https://github.com/NatLibFi/marc-record-validate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:NatLibFi/marc-record-validate.git"
  },
  "license": "AGPL-3.0+",
  "version": "1.0.3",
  "main": "./lib/main",
  "bin": {
    "generate-validate-bundle": "./bin/generate-validate-bundle"
  },
  "scripts": {
    "lint": "jshint .",
    "test-nodejs": "istanbul cover _mocha -- test/*.spec.js test/nodejs/*.spec.js",
    "test-browser": "npm run generate-requirejs-config && karma start",
    "test": "npm run test-nodejs && npm run test-browser",
    "cover": "npm run test && istanbul check-coverage",
    "check": "npm run lint && npm run cover",
    "travisci": "npm run check",
    "publish-to-npm": "npm install && npm run check && npm publish --access=public",
    "generate-requirejs-config": "requirejs-configurator --npm -D -P > test/browser-main.js"
  },
  "dependencies": {
    "marc-record-js": "^0.1.1",
    "@natlibfi/es6-polyfills": "^2.0.0",
    "@natlibfi/es6-shims": "^2.0.0",
    "cli-args": "^1.2.1",
    "@natlibfi/cli-wrap": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "jshint": "^2.9.4",
    "mock-fs": "^4.4.1",
    "simple-mock": "^0.7.3",
    "mocha": "https://github.com/jRiest/mocha#fix_browser_delay_built",
    "istanbul": "^0.4.5",
    "requirejs": "^2.3.2",
    "karma": "^1.4.1",
    "karma-mocha": "^1.3.0",
    "karma-requirejs": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-requirejs-preprocessor": "^0.0.2",
    "phantomjs-prebuilt": "^2.1.14",
    "requirejs-configurator": "https://github.com/natlibfi-arlehiko/requirejs-configurator#peer-deps",
    "codeclimate-test-reporter": "^0.4.0"
  }
}
